<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/usrdp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_video_title_name_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Title"
            android:textSize="26sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <VideoView
                android:id="@+id/videoView_lecture_video_download"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"

                android:layout_margin="18dp"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressBar_buffer"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downloads:"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                />



            <TextView
                android:id="@+id/lbl_video_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                />



        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_download_lectures"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:foreground="@drawable/ic_file_download_black_24dp" />


        </LinearLayout>


        <EditText
            android:id="@+id/txt_url_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:cursorVisible="true"
            android:editable="true"
            android:ems="500"
            android:enabled="true"
            android:focusable="auto"
            android:freezesText="true"
            android:inputType="textMultiLine"
            android:textSize="2sp"
            android:visibility="gone" />

    </LinearLayout>




</android.support.v7.widget.CardView>



